<div class="unit-component">
    <div class="side-selection border-bottom py-1 px-3">
        <div class="btn-group w-100" role="group">
            <button @onclick="@(e => SetAlliance(Alliance.Allies))" type="button" class="btn btn-secondary btn-sm @(((Alliance == Alliance.Allies)) ? "active" : "")">Allies</button>
            <button @onclick="@(e => SetAlliance(Alliance.Axis))" type="button" class="btn btn-secondary btn-sm @(((Alliance == Alliance.Axis)) ? "active" : "")">Axis</button>
        </div>
    </div>
    <div class="input-group input-group-sm my-1 px-3">
        <InputSelect id="classification" class="form-control" @bind-Value="@Belligerent.Name">
            @switch (Alliance)
            {
                case Alliance.Allies:
                    @foreach (Enum item in Enum.GetValues(typeof(Allies)))
                    {
                        <option value="@item">@item.ToString()</option>
                    }
                    break;
                case Alliance.Axis:
                    @foreach (Enum item in Enum.GetValues(typeof(Axis)))
                    {
                        <option value="@item">@item.ToString()</option>
                    }
                    break;
            }
        </InputSelect>
    </div>
    <div class="row">
        <div class="col-md-6 text-center">
            <span class="d-inline-block align-middle">Strength</span>
        </div>
        <div class="col-md-6 text-center">
            <button @onclick="@(e => AddAsset(AssetType.Strength))" type="button" class="btn btn-success btn-circle">
                <i class="fa fa-plus"></i>
            </button>
        </div>
        <div class="col mx-3 my-1">
            @foreach (var item in Belligerent.Strength)
            {
                @item.Amount 
                @:&nbsp;
                @item.Classification.FullName <br>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-center">
            <span class="d-inline-block align-middle">Losses</span>
        </div>
        <div class="col-md-6 text-center">
            <button @onclick="@(e => AddAsset(AssetType.Loss))" type="button" class="btn btn-success btn-circle">
                <i class="fa fa-plus"></i>
            </button>
        </div>
        <div class="col mx-3 my-1">
            @foreach (var item in Belligerent.Losses)
            {
                @item.Amount
                @:&nbsp;
                @item.Classification.FullName
                @:&nbsp;
                @item.Condition<br>
            }
        </div>
    </div>
</div>
<wikibellum.App.Components.AddUnitAssetDialog @ref="Dialog" AddAssetEventCallback="@AddUnitAssetDialog_OnAssetAdded" CloseEventCallback="@AddUnitAssetDialog_OnDialogClose"></wikibellum.App.Components.AddUnitAssetDialog>
<style>
    .unit-component {
        border-top: 1px solid;
        border-bottom: 1px solid;
        border-radius: 0.5rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
        padding-top: 0.2rem;
        padding-bottom: 1rem;
        background: #e1e1e1
    }

        .unit-component span {
            font-weight: bold;
        }

    .btn-circle {
        width: 30px;
        height: 30px;
        padding: 0px 0px;
        border-radius: 15px;
        text-align: center;
        font-size: 20px;
        font-weight: 1000;
        line-height: 1.42857;
    }
</style>