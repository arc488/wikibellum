
@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Employee Quick Add</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@Asset" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="classification">Classification</label>
                            <InputSelect id="classification" class="form-control" @bind-Value="@Asset.Classification">
                                @foreach (Enum item in Enum.GetValues(typeof(Land)))
                                    {
                                        <option value="@item">@item.ToString()</option>
                                    }
                                @foreach (Enum item in Enum.GetValues(typeof(Naval)))
                                    {
                                        <option value="@item">@item.ToString()</option>
                                    }
                            </InputSelect>
                            <ValidationMessage For="@(() => Asset.Classification)" />
                        </div>

                        <div class="form-group">
                            <label for="condition">Condition: </label>
                            <InputSelect id="condition" class="form-control" @bind-Value="@Asset.Condition">
                                @foreach (Enum item in Enum.GetValues(typeof(Condition)))
                                    {
                                    <option value="@item">@item.ToString()</option>

                                    }
                            </InputSelect>
                            <ValidationMessage For="@(() => Asset.Condition)" />
                        </div>

                        <div class="form-group">
                            <label for="amount">Amount: </label>
                            <InputNumber id="amount" class="form-control" @bind-Value="@Asset.Amount" placeholder="Enter amount"></InputNumber>
                            <ValidationMessage For="@(() => Asset.Amount)" />
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}