@page "/eventlist"

@if (_events == null)
{
    <h4>Loading...</h4>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in _events)
            {
                <tr @onclick="@(e => ShowDetails(item.EventId))">
                    <th scope="row">@item.EventId</th>
                    <td>@item.Title</td>
                </tr>
            }

        </tbody>
    </table>
}
