@if (_show)
{
    <div id="report-error" class="modal" style="display: block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Report an error</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <textarea style="resize: none; width: 100%;" rows="10" @bind="Report.Message"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" @onclick="Submit" class="btn btn-primary">Submit</button>
                    <button type="button" @onclick="Cancel" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
